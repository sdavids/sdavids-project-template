{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../tsconfig.base.json",
  "include": ["**/*.mts", "../src/**/*.ts"],
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "lib": ["esnext", "dom", "dom.iterable", "dom.asynciterable"],
    "types": ["vite/client"],
    "tsBuildInfoFile": "../node_modules/.cache/tsc/tsconfig.vite.tsbuildcache",
    "paths": {
      "@src/*": ["../src/*"]
    }
  }
}
